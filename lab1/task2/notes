za gdb:
-exec set follow-fork-mode child


napraviti N pajpova
	- svaki proces ima svoj pipe
	
- da bi svi procesi javili svima 
	- (N-1) procesa zapise u i-ti proces (tako su svi javili jednom procesu)
	- tako ukrug N puta

		-->  - svi jave procesu broj 1,
			 - svi jave procesu broj 2,
			 - svi jave procesu broj 3,
			 - svi jave procesu broj 4,
			   ...	

	svaki proces ima jedan s kojeg cita i  N-1 pipe na kojeg salje poruke
		--> i-ti proces moze do svojih pipe descriptora doci na pipe_descriptors[i]




             ====  algritam ====


cntr = 5
while (cntr > 0){
	
	posalji_request();
	
	broj_odgovora = PROC_NUM - 1;
	while(true){
	
		primi_poruku();
		
		if(request){
			pushaj lokalno (insertaj sortirano)
			odgovori
		}else if( reply){
			broj_odgovora --;
		
		}else if (done){
			makni iz lokalnog queue-a     --> TODO
		}

		if(skupio je (PROC_NUM-1) odgovora && na pocetku SORTIRANOG queuea je njegov requst){  //skupio je PROC_NUM-1 odgovora i prvi u queue je
				-- kriticni odjeljak --
				makni request iz lokanlnog queua i broadcastaj done

				break //izadji iz male petlje i ponovo salji request pa slusaj odgovore
			}
	
	}
	
}
